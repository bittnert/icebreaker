
MEMORY
{
    rom (rx) : ORIGIN = 0x00000000, LENGTH = 4K
    ram (rw) : ORIGIN = 0x01000000, LENGTH = 64K
}
ENTRY(_start)
SECTIONS
{
    .text : {
        *(.text)
        *(.text*)
    } > ram

    .rodata : {
        *(.rodata)
        *(.rodata*)
    } > ram

    .data : {
        *(.data)
        *(.data*)
    } > ram

    .bss : {
        *(.bss)
        *(.bss*)
    } > ram

    .heap : {
        *(.heap)
    } > ram
    _stack_top = ORIGIN(ram) + LENGTH(ram);
}